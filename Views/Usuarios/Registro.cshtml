@model Usuario

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Registro de Usuario</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Usuarios" asp-action="Registro" method="post">
                        <div class="form-group">
                            <label for="NombreUsuario">Nombre de Usuario</label>
                            <input type="text" class="form-control" id="NombreUsuario" name="NombreUsuario" required>
                        </div>
                        <div class="form-group">
                            <label for="Contraseña">Contraseña</label>
                            <input type="password" class="form-control" id="Contraseña" name="Contraseña" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para alert -->
@section Scripts {
    @if (TempData["MostrarAlerta"] != null && (bool)TempData["MostrarAlerta"])
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No se puede crear el usuario porque ya existe.',
                    confirmButtonText: 'OK'
                });
            });
        </script>
        TempData["MostrarAlerta"] = false; // Reiniciamos el valor para que no muestre la alerta en futuras peticiones
    }
}