@using System.Text.Json
@{
    Usuario usuario = new Usuario();
    var isLoggedInJson = ViewContext.HttpContext.Session.GetString("IsLoggedIn");
    if (!string.IsNullOrEmpty(isLoggedInJson))
    {
        usuario = JsonSerializer.Deserialize<Usuario>(isLoggedInJson);
    }
}
<ul class="navbar-nav">
    @if (!string.IsNullOrEmpty(isLoggedInJson))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @usuario.NombreUsuario</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <form class="form-check-inline" asp-action="LogOut" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">Login</a>
        </li>
    }
</ul>